# Streamlit secrets file example
# Copy this to `.streamlit/secrets.toml` and fill in real values.
# Do NOT commit secrets.toml to git (already added to .gitignore)

# Root-level secrets (available as environment variables and via st.secrets)
DEPLOYMENT_MODE = "cloud"
GROQ_API_KEY = "your_groq_api_key_here"
PINECONE_API_KEY = "your_pinecone_api_key_here"
HUGGINGFACE_API_TOKEN = "your_huggingface_token_here"

# Optional Streamlit server configuration
STREAMLIT_SERVER_PORT = 8501
STREAMLIT_SERVER_HEADLESS = true

# Grouped secrets (accessible via st.secrets.pinecone.environment or as PINECONE_ENVIRONMENT env var)
[pinecone]
environment = "gcp-starter"
index_name = "migracion"

[groq]
model = "llama3-8b-8192"

[huggingface]
embedding_model = "sentence-transformers/all-MiniLM-L6-v2"

# You can access these secrets in your app like:
# st.secrets["GROQ_API_KEY"] or st.secrets.pinecone.environment
# Root-level secrets are also available as environment variables
